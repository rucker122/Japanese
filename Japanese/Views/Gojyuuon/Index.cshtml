@model IEnumerable<Japanese.Models.SYLLABARIES>

@{
    ViewData["Title"] = "五十音假名";
}

<h1>@ViewData["Title"]</h1>

@foreach (var r in Model.Select(r => r.row).Distinct())
{
    <div class="card-group">

        @foreach (var s in Model.Where(s => s.row == r))
        {
            <div class="card">
                <div class="card-body display-3 text-center">
                    <ruby>
                        @s.character
                        <rt>@s.pronounce</rt>
                    </ruby>
                </div>
            </div>
        }
    </div>
}